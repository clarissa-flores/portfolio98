---
import '../styles/global.css';
import winboxScript from '../scripts/winbox-lite.js?url';

const { title = 'Clarissa • Portfolio', description = 'Web Developer in San Antonio — Win98 desktop portfolio' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="https://unpkg.com/98.css" />
    <script type="module" src={winboxScript} defer></script>
    <link rel="icon" href="/assets/favicon.ico" />
  </head>
  <body>
    <slot />
    <script>
      window.addEventListener('DOMContentLoaded', () => {
        const el = document.querySelector('[data-clock]');
        const tick = () => el && (el.textContent = new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}));
        tick();
        setInterval(tick, 30000);
      });
    </script>
  </body>
</html>
