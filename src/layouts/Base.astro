---
import '../styles/global.css';
import BootScreen from '../components/BootScreen.astro';

const { title = 'Clarissa Flores', description = 'ðŸš€ Web Developer in San Antonio | 90+ Sites Optimized for Speed, SEO, and Engagement âœ¨ Bridging Creativity and Functionality for Positive Impact' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- 98.css removed during os-gui migration -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/vendor/clippy/clippy.css" />
    <script src="/vendor/clippy/jquery.min.js" defer data-clippy-jq></script>
    <script src="/vendor/clippy/clippy.js" defer data-clippy-lib></script>
    <script type="module" src="/scripts/sound.js"></script>
  </head>
  <body>
    <BootScreen />
    <slot />
    <script>
      window.addEventListener('DOMContentLoaded', () => {
        const el = document.querySelector('[data-clock]');
        const tick = () => el && (el.textContent = new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}));
        tick();
        setInterval(tick, 30000);
      });
    </script>
    <script type="module" src="/scripts/boot.js"></script>
    <script type="module" src="/scripts/clippy.js"></script>
  </body>
</html>
